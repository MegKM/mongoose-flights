<%- include('../partials/header') %>

<main>
<h2><%= title %></h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight number</th>
      <th>Departure date</th>
      <th>Departure time</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs.toLocaleDateString()%></td>
            <td><%= f.departs.toLocaleTimeString()%></td>
            <td><a href="/flights/<%= f._id%>">Details</a></td>
        </tr>
    <% }); %>
  </tbody>
</table>
</main>

<%- include('../partials/footer') %>